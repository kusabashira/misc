#!/usr/bin/env perl6
my $version = "0.2.0";

sub USAGE() {
  note q:to/__USAGE__/.chomp;
Usage:  [OPTION]... [FILE]...
Reverse lines of FILE(s), or standard input.

Options:
  -d, --delimiter=DELIM    delimit lines by DELIM
      --help               display this help text and exit
      --version            output version information and exit
__USAGE__
}

sub VERSION() {
  note $version;
}

sub MAIN (Str :d(:$delimiter) = "", Bool :$help, Bool :$version, *@files) {
  if $help {
    USAGE();
    exit(0);
  }
  if $version {
    VERSION();
    exit(0);
  }

  if @files.elems == 0 {
    for $*IN.lines() -> $line {
      say $line.split($delimiter).reverse.join($delimiter);
    }
  } else {
    for @files -> $file {
      my $fh = open $file;
      for $fh.lines() -> $line {
        say $line.split($delimiter).reverse.join($delimiter);
      }
    }
  }
}
